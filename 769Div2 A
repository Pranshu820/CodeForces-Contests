#include <bits/stdc++.h>
#define ll long long
#define mod 1000000007
using namespace std;



int main(){
ios_base::sync_with_stdio(false); cin.tie(0);
int t; cin >> t; while(t--){
    int n;
    cin >> n; 
    string s;
    cin >> s;

    string ss = s;
    reverse(s.begin(), s.end());

    if(n == 1) cout << "YES\n";

    else if(n == 2){
        if(ss == "01" || ss == "10") cout << "YES\n";
        else cout << "NO\n";
    }

    else if(!ss.compare(s)) cout << "NO\n";
    else{
       cout << "NO\n";
    }
}
    return 0;
}
